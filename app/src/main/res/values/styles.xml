<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="toolbarStyle">@style/myToolbarStyle</item>
    <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>

  </style>
  <style name="myToolbarNavigationButtonStyle"
      parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:src">@drawable/ic_drawer_explore</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:padding">12dp</item>
    <item name="android:scaleType">centerInside</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

  <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
    <item name="android:paddingRight">10dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>
  <style name="AppTheme.ScheduleActivity" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="myToolbarActionOverflowButtonStyle" parent="">
    <item name="android:src">@drawable/ic_menu_moreoverflow_mtrl_alpha</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>
  <style name="KeynoteView"/>

  <style name="KeynoteView.KeynoteImageStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:focusable">true</item>
    <item name="android:tint">@color/photo_tint</item>
    <item name="android:scaleType">centerCrop</item>
  </style>

  <style name="KeynoteView.KeynoteTitleStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:textColor">#fff</item>

    <item name="android:gravity">bottom|left</item>
    <item name="android:layout_gravity">bottom|left</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingBottom">8dp</item>

    <item name="android:focusable">true</item>
    <item name="android:background">?android:selectableItemBackground</item>
  </style>

  <style name="KeynoteView.KeynoteTimeAndPlace" parent="KeynoteView.KeynoteTitleStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/time_and_place</item>

    <item name="android:gravity">bottom|left</item>
    <item name="android:layout_gravity">bottom|left</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingBottom">8dp</item>

    <item name="android:background">?android:selectableItemBackground</item>
  </style>

  <style name="ScheduleView"/>

  <style name="ScheduleView.TitleStyle">

    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@android:color/black</item>

    <item name="android:gravity">bottom|left</item>
    <item name="android:layout_gravity">bottom|left</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingLeft">5dp</item>

  </style>

  <style name="ScheduleView.SpeakerStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@android:color/black</item>

    <item name="android:gravity">bottom|left</item>
    <item name="android:layout_gravity">bottom|left</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingBottom">8dp</item>


  </style>

  <style name="ScheduleView.LightningTitle" parent="ScheduleView.TitleStyle">
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="ScheduleView.LightningLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:textSize">@dimen/text_size_xsmall</item>
    <item name="android:textColor">@android:color/darker_gray</item>

    <item name="android:gravity">bottom|left</item>
    <item name="android:layout_gravity">bottom|left</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingBottom">8dp</item>


  </style>

  <style name="SessionDetailSectionHeader">
    <item name="android:textSize">@dimen/text_size_xlarge</item>
    <item name="android:textColor">@color/theme_primary</item>
    <item name="android:paddingLeft">@dimen/spacing_major</item>
    <item name="android:paddingBottom">8dp</item>
  </style>


  <style name="ProgressBar">
    <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
    <item name="android:indeterminateOnly">true</item>
    <item name="android:indeterminateBehavior">repeat</item>
    <item name="android:indeterminateDuration">900</item>
    <item name="android:minWidth">80dp</item>
    <item name="android:maxWidth">80dp</item>
    <item name="android:minHeight">80dp</item>
    <item name="android:maxHeight">80dp</item>
  </style>

</resources>
