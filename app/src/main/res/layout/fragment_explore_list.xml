<?xml version="1.0" encoding="utf-8"?>

<org.devconmyanmar.apps.devcon.ui.widget.CustomSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/explore_swipe_refresh_view"
    android:background="#ffebebeb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <se.emilsjolander.stickylistheaders.StickyListHeadersListView
      android:id="@+id/explore_list_view"
      android:layout_marginLeft="@dimen/spacing_minor"
      android:layout_marginStart="@dimen/spacing_minor"
      android:layout_marginRight="@dimen/spacing_minor"
      android:divider="@null"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:clickable="true"
      android:scrollbarStyle="outsideOverlay"
      android:scrollbarSize="10dp"
      android:scrollbarThumbVertical="@drawable/theme_scrollbar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</org.devconmyanmar.apps.devcon.ui.widget.CustomSwipeRefreshLayout>