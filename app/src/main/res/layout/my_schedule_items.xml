<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lightning_card_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">
  <LinearLayout
      android:orientation="vertical"
      android:paddingLeft="@dimen/spacing_minor"
      android:paddingRight="@dimen/spacing_minor"
      android:paddingStart="@dimen/spacing_minor"
      android:layout_gravity="start|center_vertical"
      android:gravity="center_horizontal"
      android:layout_width="@dimen/talk_time_column_width"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lightning_schedule_from_time"
        tools:text="10:00 AM"
        style="@style/ScheduleView.TitleStyle"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/lightning_schedule_to_time"
        style="@style/ScheduleView.TitleStyle"
        tools:text="10:45 AM"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <android.support.v7.widget.CardView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"

      cardView:background="@drawable/broswe_card_background"
      android:orientation="horizontal"
      >
      <LinearLayout
          android:paddingLeft="@dimen/spacing_minor"
          android:paddingRight="@dimen/spacing_minor"
          android:paddingStart="@dimen/spacing_minor"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lightning_schedule_title"
            style="@style/ScheduleView.LightningTitle"
            tools:text="Browse Sessions"
            android:textSize="@dimen/text_size_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ScheduleView.LightningLabel"
            android:textSize="@dimen/text_size_xsmall"
            tools:text="23 available sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

      </LinearLayout>

  </android.support.v7.widget.CardView>
</LinearLayout>