<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_marginLeft="@dimen/spacing_minor"
    android:layout_marginStart="@dimen/spacing_minor"
    android:layout_marginRight="@dimen/spacing_minor"
    cardView:cardBackgroundColor="#B3c70813"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <TextView
      android:id="@+id/room_name"
      tools:text="Conference Room"
      android:textColor="@android:color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/spacing_minor"
      />
  <TextView
      android:id="@+id/time_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:layout_gravity="right"
      android:padding="@dimen/spacing_minor"
      tools:text="12pm to 13 pm"/>
</android.support.v7.widget.CardView>