<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/card_background"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:paddingLeft="@dimen/spacing_minor"
          android:paddingRight="@dimen/spacing_minor"
          android:paddingStart="@dimen/spacing_minor"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          android:layout_width="@dimen/talk_time_column_width"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lightning_schedule_from_time"
            tools:text="10:00 AM"
            style="@style/ScheduleView.TitleStyle"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/lightning_schedule_to_time"
            style="@style/ScheduleView.TitleStyle"
            tools:text="10:45 AM"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_small"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lightning_schedule_title"
            style="@style/ScheduleView.LightningTitle"
            tools:text="Bringing Silicon Valley to Yangon"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lightning_schedule_speaker"
            style="@style/ScheduleView.SpeakerStyle"
            tools:text="Oct 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ScheduleView.LightningLabel"
            android:text="@string/lightning_talk_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

      </LinearLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>
</FrameLayout>