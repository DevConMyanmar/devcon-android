<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/lightning_card_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:paddingRight="12dp"
          android:paddingLeft="4dp">

        <TextView
            android:id="@+id/lightning_schedule_title"
            style="@style/ScheduleView.LightningTitle"
            tools:text="Bringing Silicon Valley to Yajhsdddon d"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lightning_schedule_speaker"
            style="@style/ScheduleView.SpeakerStyle"
            tools:text="Oct 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ScheduleView.LightningLabel"
            android:text="@string/lightning_talk_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

      </LinearLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>
</FrameLayout>